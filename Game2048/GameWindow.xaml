<Window x:Class="Game2048.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048"
        mc:Ignorable="d"
        Title="2048" Height="650" Width="500" SizeToContent="Manual" Background="Gray">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="2048" HorizontalAlignment="Left" Style="{StaticResource InfoToLabelStyle}"/>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Best Score: " FontSize="24" VerticalAlignment="Center" Style="{StaticResource InfoToLabelStyle}"/>
            <TextBlock x:Name="BestScoreText" Text="0" FontSize="24" HorizontalAlignment="Center" Style="{StaticResource InfoToLabelStyle}" VerticalAlignment="Center" Margin="5,0,10,5"/>
            <TextBlock Text="Score: " FontSize="24" VerticalAlignment="Center" Style="{StaticResource InfoToLabelStyle}"/>
            <TextBlock x:Name="ScoreText" Text="0" FontSize="24" HorizontalAlignment="Center" Style="{StaticResource InfoToLabelStyle}" Margin="5,0,10,0"/>

        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Right"> 
            <Button  x:Name="ResetButton" Content="Reset" Width="100" Height="40" Click="Reset_Click" Style = "{StaticResource MenuBtnStyle}" />
            <Button  x:Name="MenuButton" Content="Menu" Width="100" Height="40" Click="MenuButton_Click" Style = "{StaticResource MenuBtnStyle}" />
        </StackPanel>

        <!-- Игровое поле -->
        <Grid x:Name="GameGrid" Grid.Row="1" Width="400" Height="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
